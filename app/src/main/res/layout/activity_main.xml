<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.artempugachev.homeinformation.MainActivity"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    android:padding="@dimen/margin"
    android:keepScreenOn="true"
    >

    <TextClock
        android:id="@+id/clockView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        style="@style/clock"
        />

    <TextClock
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        style="@style/date"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/curWeatherTextView"
            style="@style/weather"
            android:layout_marginTop="@dimen/margin"
            android:gravity="end"
            />

        <ProgressBar
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/pb_weather"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:gravity="end"
            />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forecastTextView"
        style="@style/forecast"
        android:layout_marginTop="@dimen/margin"
        android:gravity="end"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_big"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_today"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventsTextView"
            style="@style/events"
            android:layout_marginLeft="@dimen/margin"
            />
    </LinearLayout>
</LinearLayout>
